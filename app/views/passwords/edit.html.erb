<% @page_title = t("passwords.change_password") %>
<h1><%= @page_title %></h1>

<div class="toolbar"><%= link_to t("passwords.return_to_account"), :account %></div>

<%= form_for @customer, as: "account", url: :password do |form| %>
  <%= render "shared/errors", obj: @customer %>

  <table class="attr">
    <tr>
      <th><%= form.label :current_password, t("passwords.current_password") %></th>
      <td><%= form.password_field :current_password %></td>
    </tr>
    <tr>
      <th><%= form.label :password, t("passwords.new_password") %></th>
      <td><%= form.password_field :password %></td>
    </tr>
    <tr>
      <th><%= form.label :password_confirmation, t("passwords.confirm_new_password") %></th>
      <td><%= form.password_field :password_confirmation %></td>
    </tr>
  </table>

  <div><%= form.submit t("passwords.change") %></div>
<% end %>
