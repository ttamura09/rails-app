<table>
  <tr>
    <%= form.label :seat_ids, "座席の選択" %>
    <% @seats.each do |seat| %>
      <% if seat.seat_class == params[:seat_class] %>
        <td>
          <%= check_box_tag "booking[seat_ids][]", seat.id %>
          <%= label_tag "booking_seat_ids_#{seat.id}", seat.number %>
        </td>
      <% end %>
    <% end %>
  </tr>
</table>