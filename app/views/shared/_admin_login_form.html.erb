<h2>管理者ログイン</h2>

<% if flash.alert %>
  <p class="alert"><%= flash.alert %></p>
<% end %>

<%= form_tag [:admin, :session], id: "login_form" do %>
  <div>
    <label>ユーザー名：</label>
    <input type="text" name="login_name">
  </div>
  <div>
    <label>パスワード：</label>
    <input type="password" name="password">
  </div>
  <div>
    <input type="submit" value="ログイン">
  </div>
<% end %>
