<%= render "shared/errors", obj: @customer %>
<table class="attr">
  <tr>
    <th><%= form.label :name, "名前" %></th>
    <td><%= form.text_field :name %></td>
  </tr>

  <tr>
    <th><%= form.label :alph_name, "アルファベット名" %></th>
    <td><%= form.text_field :alph_name %></td>
  </tr>

  <tr>
    <th><%= form.label :login_name, "ログイン名" %></th>
    <td><%= form.text_field :login_name %></td>
  </tr>

  <tr>
    <th>性別</th>
    <td>
      <%= form.radio_button :sex, 1 %>
      <%= form.label :sex_1, "男" %>
      <%= form.radio_button :sex, 2 %>
      <%= form.label :sex_2, "女" %>
    </td>
  </tr>

  <tr>
    <th><%= form.label :birthday, "誕生日",
                       for: "customer_birthday_1i" %></th>
    <td><%= form.date_select :birthday,
                             start_year: 1940, end_year: Time.current.year,
                             use_month_numbers: true %></td>
  </tr>

  <% if @customer.new_record? %>
    <tr>
      <th><%= form.label :password, "パスワード" %></th>
      <td><%= form.text_field :password %></td>
    </tr>
  <% end %>

  <tr>
    <th><%= form.label :email, "メールアドレス" %></th>
    <td><%= form.text_field :email %></td>
  </tr>
</table>
