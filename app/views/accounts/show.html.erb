<% @page_title = t("account.my_page_title") %>
<h1><%= @page_title %></h1>
<p><%= link_to t("account.edit"), [:edit, :account] %></p>
<p><%= link_to t("account.change_password"), [:edit, :password] %></p>

<table>
  <tr>
    <th><%= t("account.name") %></th>
    <td><%= @customer.name %></td>
  </tr>

  <tr>
    <th><%= t("account.alph_name") %></th>
    <td><%= @customer.alph_name %></td>
  </tr>

  <tr>
    <th><%= t("account.login_name") %></th>
    <td><%= @customer.login_name %></td>
  </tr>

  <tr>
    <th><%= t("account.gender") %></th>
    <td><%= (@customer.sex == 1 ? t("account.options.male") : t("account.options.female")) %></td>
  </tr>

  <tr>
    <th><%= t("account.birthday") %></th>
    <td><%= @customer.birthday %></td>
  </tr>

  <tr>
    <th>E-mail</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<%= link_to t("account.delete_account"), :account, method: :delete,
            data: { confirm: t("account.delete_confirm") } %>

<%= render "shared/booking_confirmation" %>